<!DOCTYPE html>
<html>

<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="../../css/materialize.min.css" media="screen,projection" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {

      font-family: sans-serif !important;
    }

    ul li {
      position: relative;
    }

    ul li a::before {
      content: "";
      position: absolute;
      bottom: 0px;
      left: 0;
      width: 0px;
      height: 4px;
      transition: 0.3s;
      background-color: #fff !important;

    }

    ul li a::after {
      content: "";
      position: absolute;
      top: 0px;
      right: 0;
      width: 0px;
      height: 4px;
      transition: 0.5s ease;
      background-color: #fff !important;

    }

    ul li:hover a::before,
    ul li:hover a::after {
      content: "";
      width: 100%;
    }

    .card {
      padding: 20px;
      width: 280px;
      background-color: #ebecf0;

      transition: 0.3s;
      margin: 20px;
      transform: rotate(0deg) skewX(0deg) translate(0, 0);
    }

    .card::before {
      content: "";
      position: absolute;
      bottom: -20px;
      right: -10px;
      height: 20px;
      width: 100%;
      background-color: #babecc;
      transform: rotate(0deg) skewX(45deg);
    }

    .card::after {
      content: "";
      position: absolute;
      right: -19px;
      top: 9px;
      height: 100%;
      width: 20px;
      background-color: #babecc;
      transform: rotate(0deg) skewY(45deg);
    }

    .card:hover {
      background-color: #fa2d2d;
      transform: rotate(0deg) skewX(0deg) translate(-20px, -20px);
      box-shadow: 50px 50px 50px #111;

    }

    .card:hover .card-title {
      color: #eee !important;
    }

    .card:hover::before {
      background-color: #b61408;
    }

    .card:hover::after {
      background-color: #c9190d;
    }

    #more {
      transition: 0.5s linear;
    }

    #more:hover {
      transform: scale(1.1);
    }

    .btn2 {
      background-color: #fa2d2d;
      position: relative;
    }

    .btn2::before {
      content: "";
      position: absolute;
      bottom: -7px;
      left: 3px;
      height: 7px;
      width: 100%;
      background-color: #b61408;
      transform: rotate(0deg) skewX(45deg);
    }

    .btn2::after {
      content: "";
      position: absolute;
      top: 4px;
      right: -7px;
      height: 100%;
      width: 7%;
      background-color: #b61408;
      transform: rotate(0deg) skewY(45deg);
    }

    .card:hover .btn2 {
      background-color: #eee;
      color: #111;
    }

    .card:hover .btn2::before {
      background-color: #babecc;
    }

    .card:hover .btn2::after {
      background-color: #babecc;
    }
  </style>
</head>

<body>
  <nav style="background-color: #fa2d2d;">
    <div class="nav-wrapper  ">
      <a href="#" class="brand-logo " style="margin-left: 30px;">Online maktab</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>

      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/student/allresult" style="font-size: 20px;">Test natijalar</a></li>
        <li><a href="#" style="font-size: 20px;">Mening kurslarim</a></li>
        <li><a href="/student/signout" style="font-size: 20px;">Logout</a></li>
      </ul>
    </div>
  </nav>

  <ul class="sidenav" id="mobile-demo">
    <li><a href="#">Test natijalar</a></li>
    <li><a href="#">Mening kurslarim</a></li>
    <li><a href="#">Logout</a></li>

  </ul>
  <br>
  <div class="row " style="display:flex;flex-wrap: wrap;justify-content: center;align-items: center;">


    <% for(var j=0; j < message.length; j++) { %>

    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="../../img/login.jpg">
      </div>
      <div class="card-content">
        <span class="card-title activator  text-light-4"><%= message[j].name %><i
            class="material-icons right">more_vert</i></span>
        <p>
        <form action="/student/getcourses/<%= message[j]._id %>" method="GET"><button class="btn btn2" type="submit"
            name="action">Kirish
            <i class="material-icons right">send</i>
          </button></form>
        </p>

      </div>
      <div class="card-reveal">
        <span class="card-title text-light-4" style="color: #b61408 !important;"> <%= message[j].name %><i
            class="material-icons right">close</i></span>
        <p><%= message[j].about %></p>
      </div>

    </div>
    <% } %>

  </div>



  <footer style="background-color: #fa2d2d;">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">

          <h5 class="grey-text text-lighten-4">Online maktab loyihasi.</h5>
        </div>

      </div>
    </div>
    <div class="footer-copyright" style="height:80px;display:flex;align-items: center;">
      <div class="container white-text">
        Â© 2020 IteLab
        <a class="grey-text text-lighten-4 right"  id="more" href="#!">About me</a>
      </div>
    </div>
  </footer>
  <script type="text/javascript" src="../../js/jquery.min.js"></script>
  <script type="text/javascript" src="../../js/materialize.js"></script>
  <script>
    $(document).ready(function () {
      $('.sidenav').sidenav();
    });
  </script>
</body>

</html>