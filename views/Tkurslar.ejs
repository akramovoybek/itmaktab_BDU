  <div class="container">
<form action="/teacher/addcourse/<%= id %>" method="post">
  <table class="striped">
    <thead>
      <tr>
        <th>Course's Name</th>
        <th>Course's fee</th>
        <th>Trainer</th>
        <th>Status</th>
      </tr>
    </thead>
    
    <tbody id="place">
      <% for(course of courses){ %>
        <tr>
          <td><a href="<%= (meId==course.trainer._id)?('/teacher/addtheme/'+course._id):'' %>"><%= course.name %></a></td>
          <td><%= course.fee %></td>
          <td><%= course.trainer.name %></td>
          <td><%= course.status %></td>
        </tr>
        <%}%>
       
      </tbody>
    </table>
  </form>
    <button class="btn-floating btn-large waves-effect waves-light pulse right" id="addcourse"><i
        class="material-icons">add</i></button>
  </div>

