    <style>
      body {
  
        font-family: sans-serif !important;
      }
  
      ul li {
        position: relative;
      }
  
      ul li a::before {
        content: "";
        position: absolute;
        bottom: 0px;
        left: 0;
        width: 0px;
        height: 4px;
        transition: 0.3s;
        background-color: #fff !important;
  
      }
  
      ul li a::after {
        content: "";
        position: absolute;
        top: 0px;
        right: 0;
        width: 0px;
        height: 4px;
        transition: 0.5s ease;
        background-color: #fff !important;
  
      }
  
      ul li:hover a::before,
      ul li:hover a::after {
        content: "";
        width: 100%;
      }
  
      .card {
        padding: 20px;
        width: 280px;
        background-color: #ebecf0;
  
        transition: 0.3s;
        margin: 20px;
        transform: rotate(0deg) skewX(0deg) translate(0, 0);
      }
  
      .card::before {
        content: "";
        position: absolute;
        bottom: -20px;
        right: -10px;
        height: 20px;
        width: 100%;
        background-color: #babecc;
        transform: rotate(0deg) skewX(45deg);
      }
  
      .card::after {
        content: "";
        position: absolute;
        right: -19px;
        top: 9px;
        height: 100%;
        width: 20px;
        background-color: #babecc;
        transform: rotate(0deg) skewY(45deg);
      }
  
      .card:hover {
        background-color: #fa2d2d;
        transform: rotate(0deg) skewX(0deg) translate(-20px, -20px);
        box-shadow: 50px 50px 50px #111;
  
      }
  
      .card:hover .card-title {
        color: #eee !important;
      }
  
      .card:hover::before {
        background-color: #b61408;
      }
  
      .card:hover::after {
        background-color: #c9190d;
      }
  
      #more {
        transition: 0.5s linear;
      }
  
      #more:hover {
        transform: scale(1.1);
      }
  
      .btn2 {
        background-color: #fa2d2d;
        position: relative;
      }
  
      .btn2::before {
        content: "";
        position: absolute;
        bottom: -7px;
        left: 3px;
        height: 7px;
        width: 100%;
        background-color: #b61408;
        transform: rotate(0deg) skewX(45deg);
      }
  
      .btn2::after {
        content: "";
        position: absolute;
        top: 4px;
        right: -7px;
        height: 100%;
        width: 7%;
        background-color: #b61408;
        transform: rotate(0deg) skewY(45deg);
      }
  
      .card:hover .btn2 {
        background-color: #eee;
        color: #111;
      }
  
      .card:hover .btn2::before {
        background-color: #babecc;
      }
  
      .card:hover .btn2::after {
        background-color: #babecc;
      }
    </style>
</head>

