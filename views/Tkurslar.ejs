 <script>
    let a = true
    let tbody = document.getElementById('place')
    document.getElementById('addcourse').addEventListener('click', () => {
      if (a) {
        a = false
        tbody.innerHTML+=`
        <tr>
          <td><input type="text" name="name" required></td>
          <td><input type="number" name="fee" required></td>
          <td><%=me%></td>
          <td>Active</td>
     <td><button class="red-text" type="submit"><i class="material-icons">save</i> </button></td>
